{% extends 'base.html.twig' %}
{% block title %}Notex Mes offres{% endblock %}


{% block content %}

    <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Reclamer un Offre</h2>
                <ol>
                    <li><a href="{{ path('app_user') }}">Page Utilisateur</a></li>
                    <li>Reclamer Offre</li>
                </ol>
            </div>

        </div>
    </div><!-- End Breadcrumbs -->
</br>
    {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}
    <table>

        <tr>
            <td>{{ form_label(form.typereclamation ,"Type reclamation") }}</td>
            <td>{{ form_widget(form.typereclamation) }}</td>
            <td><span style="color:red">{{ form_errors(form.typereclamation) }}</span></td>
        </tr>
        <tr>

            <td>{{ form_widget(form.datereclamation,{"attr":{"class":"d-none"}} ) }}</td>

        </tr>
        <tr>
            <td>{{ form_label(form.descriptionrecla ,"Description reclamation") }}</td>
            <td>{{ form_widget(form.descriptionrecla ) }}</td>
            <td><span style="color:red">{{ form_errors(form.descriptionrecla ) }}</span></td>
        </tr>

        <tr>
            <td>{{ form_label(form.comuniquer,"Comuniquer") }}</td>
            <td>{{ form_widget(form.comuniquer) }}</td>
            <td><span style="color:red">{{ form_errors(form.comuniquer) }}</span></td>
        </tr>
        <tr>

            <td>{{ form_widget(form.etat ,{"value":"En cours","attr":{"class":"d-none"}}) }}</td>

        </tr>
        <tr>

            <td>{{ form_widget(form.cinreclameur,{"value":"24","attr":{"class":"d-none"}}  ) }}</td>

        </tr>
        <tr>

            <td>{{ form_widget(form.offreareclamer,{"attr":{"class":"d-none"}} ) }}</td>

        </tr>


    </table>
    <button class="btn">{{ button_label|default('Ajouter') }}</button>
    {{ form_end(form) }}










{% endblock %}